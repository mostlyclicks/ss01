<%= form_for [refinery, :athletes_admin, @athlete] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @athlete,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :athlete_image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :athlete_image_id,
               :image => @athlete.athlete_image,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :nationality -%>
    <%= f.text_field :nationality -%>
  </div>

  <div class='field'>
    <%= f.label :club_team -%>
    <%= f.text_field :club_team -%>
  </div>

  <!-- <div class='field'>
    <%#= f.label :description -%>
    <%#= f.text_field :description -%>
  </div>
 -->
  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "athletes/athlete" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.athletes.admin.athletes.athlete'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @athlete.name) -%>
<% end -%>
