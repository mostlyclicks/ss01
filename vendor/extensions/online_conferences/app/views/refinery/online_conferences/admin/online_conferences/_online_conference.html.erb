<li class='clearfix record <%= cycle("on", "on-hover") %>'>
  <span class='title'>
    <%= link_to online_conference.name, refinery.online_conferences_admin_online_conference_path(online_conference) %> <%= t('.said') %>
    <span class="preview"><%= truncate(strip_tags(sanitize(online_conference.message)), :length => 60) -%></span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag('delete.png'), refinery.online_conferences_admin_online_conference_path(online_conference),
                :class => "cancel confirm-delete",
                :title => t('admin.online_conferences.delete'),
                :'data-confirm' => t('shared.admin.delete.message', :title => online_conference.name),
                :'data-method' => "delete" -%>

    <%= link_to refinery_icon_tag('zoom.png'), refinery.online_conferences_admin_online_conference_path(online_conference),
                :title => t('.read_online_conference') -%>
  </span>
</li>
