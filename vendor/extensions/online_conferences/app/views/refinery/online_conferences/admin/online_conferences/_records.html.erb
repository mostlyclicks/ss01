<%= render 'refinery/admin/search_header', :url => refinery.online_conferences_admin_online_conferences_path %>
<% if searching? %>
  <% if @online_conferences.any? %>
    <ul>
      <%= render :partial => 'online_conference', :collection => @online_conferences %>
    </ul>
  <% else %>
    <p><%= t('no_results', :scope => 'refinery.admin.search') %></p>
  <% end %>
<% else %>
  <% if @grouped_online_conferences.any? -%>
    <% @grouped_online_conferences.each do |container| %>
      <h3><%= l((online_conference_group = container.last).first.created_at, :format => :short) %></h3>
      <ul>
        <%= render :partial => 'online_conference', :collection => online_conference_group %>
      </ul>
    <% end %>
  <% else -%>
    <p>
      <strong><%= t('no_online_conferences', :scope => 'refinery.online_conferences.admin.online_conferences.index') %></strong>
    </p>
  <% end -%>
<% end %>
