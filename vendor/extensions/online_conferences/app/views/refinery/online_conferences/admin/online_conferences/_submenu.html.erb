<div id='actions'>
  <ul>
    <% if ::Refinery::OnlineConferences::Admin::OnlineConferencesController.searchable? %>
      <li>
        <%= render '/refinery/admin/search', :url => refinery.online_conferences_admin_online_conferences_path %>
      </li>
    <% end %>
    <li <%= "class='selected'" if params[:action] == "index" %>>
      <%= link_to t('.inbox'), refinery.online_conferences_admin_online_conferences_path, :class => "email_icon" %>
    </li>
    <li>
      <%= link_to t('.update_notified'),
                    refinery.edit_online_conferences_admin_setting_path(:online_conference_notification_recipients, :dialog => true, :height => 300),
                    :class => "user_comment_icon" %>
    </li>
    <li>
      <%= link_to t('.edit_confirmation_email'),
                  refinery.edit_online_conferences_admin_setting_path(:online_conference_confirmation_body, :dialog => true),
                  :class => "edit_email_icon" %>
    </li>
  </ul>
</div>
