<% content_for :body do %>
  
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <section id="sep-form">
            <%#= render '/refinery/content_page' %>
        <div id='online-conferences'>

    <%= raw @page.content_for(Refinery::Pages.default_parts.first.to_sym) %>

    <%= form_for [refinery, :online_conferences, @online_conference], :html => {class: 'form-horizontal'} do |f| %>
      <%= render '/refinery/admin/error_messages',
                 :object => @online_conference,
                 :include_object_name => true  %>

      <div class='field name_field string_field form-group'>
        <%= f.required_label :name, class: 'control-label col-sm-3 text-left' %>
        <div class="col-sm-9"><%= f.text_field :name, class: 'form-control' %></div>
      </div>

      <div class='field email_field string_field form-group'>
        <%= f.required_label :email, class: 'control-label col-sm-3 text-left'  %>
        <div class="col-sm-9"><%= f.text_field :email %></div>
      </div>

      <div class='field inquiry_from_field string_field form-group'>
        <%= f.required_label :inquiry_from, class: 'control-label col-sm-3 text-left' %>
        <div class="col-sm-9"><%= f.text_field :inquiry_from, class: 'form-control'  %></div>
      </div>

      <div class='field topic_one_field string_field form-group'>
        <%= f.required_label :topic_one, class: 'control-label col-sm-3 text-left' %>
        <div class="col-sm-9"><%= f.text_field :topic_one, class: 'form-control'  %></div>
      </div>

      <div class='field topic_two_field string_field form-group'>
        <%= f.label :topic_two, class: 'control-label col-sm-3 text-left' %>
        <div class="col-sm-9"><%= f.text_field :topic_two, class: 'form-control'  %></div>
      </div>

      <div class='field topic_three_field string_field form-group'>
        <%= f.label :topic_three, class: 'control-label col-sm-3 text-left' %>
        <div class="col-sm-9"><%= f.text_field :topic_three, class: 'form-control'  %></div>
      </div>

      <div class="col-md-6 col-md-offset-3">
        <div class='actions'>
        <%= f.submit t('.send') %>
      </div>
      </div>
      
    <% end %>
  </div>
      </section>
    </div>
  </div>
</div>
