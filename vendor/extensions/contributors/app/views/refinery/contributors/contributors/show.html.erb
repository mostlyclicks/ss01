<% content_for :body_content_title do %>
  <%= @contributor.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @contributor.name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @contributor.description %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @contributor.image, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="contributors">
      <% @contributors.each do |contributor| %>
        <li>
          <%= link_to contributor.name, refinery.contributors_contributor_path(contributor) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
