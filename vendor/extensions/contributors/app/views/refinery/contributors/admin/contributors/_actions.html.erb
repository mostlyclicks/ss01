<ul>
  <% if ::Refinery::Contributors::Admin::ContributorsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.contributors_admin_contributors_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_contributors_admin_contributor_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Contributors::Admin::ContributorsController.sortable? && ::Refinery::Contributors::Contributor.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Contributors"),
                 refinery.contributors_admin_contributors_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Contributors"),
                 refinery.contributors_admin_contributors_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
