<%= render 'refinery/admin/search_header', :url => refinery.sep_inquiries_admin_sep_inquiries_path %>
<% if searching? %>
  <% if @sep_inquiries.any? %>
    <ul>
      <%= render :partial => 'sep_inquiry', :collection => @sep_inquiries %>
    </ul>
  <% else %>
    <p><%= t('no_results', :scope => 'refinery.admin.search') %></p>
  <% end %>
<% else %>
  <% if @grouped_sep_inquiries.any? -%>
    <% @grouped_sep_inquiries.each do |container| %>
      <h3><%= l((sep_inquiry_group = container.last).first.created_at, :format => :short) %></h3>
      <ul>
        <%= render :partial => 'sep_inquiry', :collection => sep_inquiry_group %>
      </ul>
    <% end %>
  <% else -%>
    <p>
      <strong><%= t('no_sep_inquiries', :scope => 'refinery.sep_inquiries.admin.sep_inquiries.index') %></strong>
    </p>
  <% end -%>
<% end %>
