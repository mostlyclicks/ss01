<% content_for :body do %>
  <div class='sep_inquiries'>
    <%#= raw @page.content_for(Refinery::Pages.default_parts.first.to_sym) %>

    <%= form_for [refinery, :sep_inquiries, @sep_inquiry], :html => {class: 'form-horizontal'} do |f| %>
      <%= render '/refinery/admin/error_messages',
                 :object => @sep_inquiry,
                 :include_object_name => true  %>
<div class="col-md-6">

  <h3>Personal Information</h3>

      <div class='field first_name_field string_field form-group'>
        <%= f.required_label :first_name, class: 'control-label col-sm-3 text-left' %>
        <div class="col-sm-9"><%= f.text_field :first_name, class: 'form-control' %></div>
      </div>

      <div class='field last_name_field string_field form-group'>
        <%= f.required_label :last_name, class: 'control-label col-sm-3'  %>
        <div class="col-sm-9"><%= f.text_field :last_name, class: 'form-control'  %></div>
      </div>

      <div class='field age_field string_field form-group'>
        <%= f.required_label :age, class: 'control-label col-sm-3'  %>
        <div class="col-sm-9"><%= f.text_field :age, class: 'form-control'  %></div>
      </div>

      <div class='field gender_field radio_field form-group'>
        <%= f.required_label :gender, class: 'control-label col-sm-3' %>
        <div class="col-sm-9"><% Refinery::SepInquiries::SepInquiry::GENDERS.each do |value, name| %>
                  <%= f.radio_button :gender, (name || value), :value => value %>
                  <%= f.label :"gender_#{(name || value)}", value.humanize %><br />
                <% end %></div>
      </div>

      <div class='field inquiry_from_field radio_field form-group'>
        <%= f.label :inquiry_from, class: 'contol-label col-sm-3 text-right' %>
        <div class="col-sm-9"><% Refinery::SepInquiries::SepInquiry::INQUIRY_FROM.each do |value, name| %>
                  <%= f.radio_button :inquiry_from, (name || value), :value => value %>
                  <%= f.label :"inquiry_from_#{(name || value)}", value.humanize %><br />
                <% end %></div>
      </div>

      <div class='field phone_field string_field form-group'>
        <%= f.required_label :phone, class: 'control-label col-sm-3' %>
        <div class="col-sm-9"><%= f.text_field :phone, class: 'form-control' %></div>
      </div>

      <div class='field email_field string_field form-group'>
        <%= f.label :email, class: 'control-label col-sm-3' %>
        <div class="col-sm-9"><%= f.text_field :email, class: 'form-control' %></div>
      </div>

      <div class='field city_field string_field form-group'>
        <%= f.required_label :city, class: 'control-label col-sm-3' %>
        <div class="col-sm-9"><%= f.text_field :city, class: 'form-control' %></div>
      </div>

      <div class='field state_province_field string_field form-group'>
        <%= f.required_label :state_province, class: 'control-label col-sm-3' %>
        <div class="col-sm-9"><%= f.text_field :state_province, class: 'form-control' %></div>
      </div>

      <div class='field country_field string_field form-group'>
        <%= f.required_label :country, class: 'control-label col-sm-3' %>
        <div class="col-sm-9"><%= f.text_field :country, class: 'form-control' %></div>
      </div>
      <div class='field country_field string_field form-group'>

      <div class="col-sm-9 col-sm-offset-3"><strong>Please provide the 3 most optimal times for us to reach out to you in the near future.</strong></p></div>
    </div>

      <div class='field contact_time_1_field string_field form-group'>
        <%= f.required_label :contact_time_1, class: 'control-label col-sm-3' %>
        <div class="col-sm-9"><%= f.text_field :contact_time_1, class: 'form-control' %></div>
      </div>

      <div class='field contact_time_2_field string_field form-group'>
        <%= f.label :contact_time_2, class: 'control-label col-sm-3' %>
        <div class="col-sm-9"><%= f.text_field :contact_time_2, class: 'form-control' %></div>
      </div>

      <div class='field contact_time_3_field string_field form-group'>
        <%= f.label :contact_time_3, class: 'control-label col-sm-3' %>
        <div class="col-sm-9"><%= f.text_field :contact_time_3, class: 'form-control' %></div>
      </div>

      <div class='field referral_source_field radio_field form-group'>
        <%= f.label :referral_source, class: 'contol-label col-sm-3 text-right' %>
        <div class="col-sm-9"><% Refinery::SepInquiries::SepInquiry::REFERRAL_SOURCES.each do |value, name| %>
                  <%= f.radio_button :referral_source, (name || value), :value => value %>
                  <%= f.label :"referral_source_#{(name || value)}", value.humanize %>
                <% end %></div>
      </div>


    </div>

    <div class="col-md-6">
    
      <h3>Performance Information</h3>

    
          <div class='field area_of_focus_field text_field form-group'>
            <%#= f.required_label :area_of_focus, :name => 'Hey focus' %>
            <label class="required" for="sep_inquiry_area_of_focus">In a few words, please describe your area of focus: *</label>
            
            <%= f.text_area :area_of_focus, :rows => 6, class: 'form-control' %>
          </div>
    
          <div class='field event_times_field text_field form-group'>
            <%#= f.required_label :event_times %>
            <label class="required" for="sep_inquiry_event_times">List your top times and dates achieved: *</label>
            <!-- , 'List your top times and dates achieved:' -->
            <%= f.text_area :event_times, :rows => 6, class: 'form-control'  %>
          </div>
    
          <div class='field athletic_background_field text_field form-group'>
            <%#= f.required_label :athletic_background %>
            <label class="required" for="sep_inquiry_athletic_background">Briefly describe your athletic background: *</label>
            <!-- , 'Briefly describe your athletic background:'  -->
            <%= f.text_area :athletic_background, :rows => 6, class: 'form-control'  %>
          </div>
    
          <div class='field athletic_vision_field text_field form-group'>
            <%#= f.required_label :athletic_vision %>
            <label class="required" for="sep_inquiry_athletic_vision">In a few words, tell us your vision as an athlete: *</label>
            <!-- , 'In a few words, tell us your vision as an athlete:'  -->
            <%= f.text_area :athletic_vision, :rows => 6, class: 'form-control'  %>
          </div></div>

      <div class="col-md-12 text-center submit-div"><div class='actions'>
              <%= f.submit 'Submit my information', class: 'btn btn-primary btn-lg s-button' %> 
              <!-- t('.send') -->
            </div></div>
    <% end %>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
<section id="sep-form">
      <%= render '/refinery/content_page' %>
</section>
    </div>

  </div>

</div>
