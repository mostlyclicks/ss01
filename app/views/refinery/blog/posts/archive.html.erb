<% content_for :title, "#{t('.blog_archive_for', :date => @date_title)}" %>

<% content_for :body do %>
  <h1><%= t('.blog_archive_for', :date => @date_title) %></h1>
  <% if @posts.any? %>
    <section id="blog_posts">
      <%= render :partial => "/refinery/blog/shared/post", :collection => @posts %>
      <%= will_paginate @posts %>
    </section>
  <% else %>
    <p><%= t('.no_blog_articles_posted', :date => @date_title) %></p>
  <% end %>
<% end %>

<%#= render '/refinery/blog/shared/body_content_right' %>

<%#= render "/refinery/content_page" %>
<% content_for :stylesheets, stylesheet_link_tag('refinery/blog/frontend') %>

<section id="post-show">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <%= render "/refinery/content_page" %>
      </div>
      <div class="col-md-4" id="blog-side-bar">
        <%#= render '/refinery/blog/shared/body_content_right' %>
          <%#= render "/refinery/blog/shared/rss_feed" %>
    <%= render "/refinery/blog/shared/categories" %>
    <%= render "/refinery/blog/shared/tags" %>
    <%= render "/refinery/blog/shared/posts" %>
    <%= blog_archive_widget %>
      </div>
    </div>
  </div>

</section>
